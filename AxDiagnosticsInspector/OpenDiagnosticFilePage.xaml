<Page x:Class="AxDiagnosticsInspector.OpenDiagnosticFilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AxDiagnosticsInspector"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpenDiagnosticFilePage">

    <StackPanel>
        <Label>Load Diagnostic File</Label>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxbFilepath" IsEnabled="False"/>
            <Button Grid.Column="1" x:Name="BtnPickFile" Width="20" Height="20" HorizontalAlignment="Right" Click="BtnPickFile_Click"/>
        </Grid>
        <Button x:Name="BtnDone" Height="20" Click="BtnDone_Click">Done</Button>
        <Label x:Name="LblStatus"></Label>
    </StackPanel>
</Page>
